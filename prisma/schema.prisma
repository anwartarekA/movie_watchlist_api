generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ROLE {
  USER
  ADMIN
  SUPERVISOR
  SUPERAMDIN
}
enum WATCHLISTSTATUS {
  PLANNED
  WATCHING
  COMPELETED
  DROPPED
}
model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  role ROLE @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  watchList WatchListItem[] @relation("watchlistsByUser")
  movie Movie[] @relation("createdByUser")
}
model Movie{
  id String @id @default(uuid())
  user_id String
  title String
  rating Int
  releaseYear Int
  runtime Int
  genres String[] @default([])
  url String
  watchList WatchListItem[] @relation("watchlistsForMovie")
  createdBy User @relation("createdByUser"  , fields: [user_id],references: [id],onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WatchListItem{
  id String @id @default(uuid())
  user_id String
  movie_id String
  status WATCHLISTSTATUS @default(PLANNED)
  rating Int?
  notes String?
  user User @relation("watchlistsByUser",fields: [user_id],references: [id] , onDelete:Cascade)
  movie Movie @relation("watchlistsForMovie",fields: [movie_id],references: [id],onDelete: Cascade)
  @@unique([user_id , movie_id])
}